{
  "name": "backend-template",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsup src --out-dir dist",
    "start": "node dist/app.js",
    "test": "vitest",
    "lint": "eslint",
    "migrate": "tsx src/db/migrations/run.ts",
    "docker:start": "docker compose -f docker/docker-compose.yml up",
    "docker:start:detach": "docker compose -f docker/docker-compose.yml up -d",
    "docker:stop": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.2.1",
    "@fastify/swagger": "^9.3.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "kysely": "^0.27.4",
    "pg": "^8.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.9.1",
    "@types/pg": "^8.11.10",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.12.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.5"
  }
}